{% extends 'base.html.twig' %}

{% block title %}My addresses - Menu Food App {% endblock %}

{% block body %}
    <a href="{{ path('account_address_new') }}" class="btn btn-info btn-sm float-right mt-2">Add Address</a>
    <h2>Manage my addresses</h2>

    <div class="row mt-3">
        {% for address in app.user.addresses %}
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted"></h6>
                        <p class="card-text">
                            {{ address.address }},<br>
                            {{ address.postal }} -
                            {{ address.city }}<br>
                            {{ address.country }}
                        </p>
                        <a href="{{ path('account_address_update', {id: address.id}) }}" class="card-link">Edit</a>
                        <a href="{{ path('account_address_delete', {id: address.id}) }}" class="card-link">DELETE</a>
                    </div>
                </div>
            </div>
        {% else %}
        <p>
            You haven't added any addresses yet.
        </p>
    {% endfor %}
    </div>
    <a title="Back to your members area" href="{{ path('account') }}">Return to my account</a>
{% endblock %}
